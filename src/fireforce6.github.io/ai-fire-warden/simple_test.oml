@dc:title "Simple Debug Test"
@dc:description "A minimal dataset to verify SPARQL is working."
description <https://fireforce6.github.io/ai-fire-warden/simple_test#> as simple_test {
    // Standard Dublin Core import
    uses <http://purl.org/dc/elements/1.1/> as dc
    
    // Using the Sierra base vocabulary (assuming this exists in your project)
    uses <https://fireforce6.github.io/sierra/base#> as base
    uses <https://fireforce6.github.io/sierra/requirement#> as requirement
    uses <https://fireforce6.github.io/sierra/entity#> as ent

    // 1. Define ONE Stakeholder
    instance DebugCommander : requirement:Stakeholder, ent:Actor [ 
        base:description "Debug Commander User" 
    ]

    // 2. Define ONE Requirement linked to that Stakeholder
    instance DebugRequirement : requirement:Requirement [ 
        base:description "The System shall pass the debug test."
        base:expression "True must equal True."
        requirement:isExpressedBy DebugCommander 
    ]
}